#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

CreatePasswordForm:

<CreatePasswordForm@BoxLayout>:
    orientation: "vertical"
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        TextInput:
            id: originalpassword
            size_hint_x: 50

    BoxLayout:
        height: "40dp"
        size_hint_y: None
        TextInput:
            id: miscdata1
            size_hint_x: 50

    BoxLayout:
        height: "40dp"
        size_hint_y: None
        TextInput:
            id: miscdata2
            size_hint_x: 50

    BoxLayout:
        height: "80dp"
        size_hint_y: 5
        Button:
            id: hashselector1
            text: "Hash selector place holder"
            size_hint_x: 10

        Button:
            id: hashselector2
            text: "Hash selector place holder"
            size_hint_x: 10

    BoxLayout:
        height: "80dp"
        size_hint_y: None
        Button:
            id: genpassword
            text: "Generate password"
            size_hint_x: 5

    BoxLayout:
        height: "80dp"
        size_hint_y: None
        TextInput:
            id: newpassword
            size_hint_x: 50

    BoxLayout:
        Button:
            text: "Copy to clipboard"

#might be smart to change to floating layout later as it is percent size of the screen based